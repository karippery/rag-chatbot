# syntax=docker/dockerfile:1.4

# ─────────────────────────────────────────────────────────────
# Stage 1: Builder - Install dependencies (heavy lifting)
# ─────────────────────────────────────────────────────────────
FROM python:3.11-slim-bookworm AS builder

WORKDIR /app

# UV + Python configuration for reliable builds
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    UV_LINK_MODE=copy \
    UV_PYTHON_DOWNLOADS=never \
    UV_PROJECT_ENVIRONMENT=/opt/venv \
    UV_HTTP_TIMEOUT=600 \
    UV_NO_PROGRESS=1 \
    HF_HOME=/tmp/hf_cache

# Install build-time system dependencies (required for compiling wheels)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:0.8.14 /uv /uvx /bin/

# Copy ONLY dependency manifests first → maximizes layer caching
# Changing app code won't invalidate this layer
COPY pyproject.toml uv.lock ./

# Install ALL dependencies (including dev) with persistent cache
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --no-install-project --extra dev

# ─────────────────────────────────────────────────────────────
# Stage 2: Runtime - Development environment with hot-reload support
# ─────────────────────────────────────────────────────────────
FROM python:3.11-slim-bookworm AS runtime

WORKDIR /app

# Runtime environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    UV_PROJECT_ENVIRONMENT=/opt/venv \
    PATH="/opt/venv/bin:$PATH" \
    DJANGO_SETTINGS_MODULE=config.settings.development \
    HF_HOME=/app/.cache/huggingface \
    TRANSFORMERS_CACHE=/app/.cache/huggingface

# Install ONLY runtime system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    netcat-openbsd \
    libpq5 \
    && rm -rf /var/lib/apt/lists/* \
    && mkdir -p /app/.cache \
    && useradd -m -u 1000 appuser \
    && chown -R appuser:appuser /app


# Copy the pre-built virtual environment from builder
COPY --from=builder --chown=appuser:appuser /opt/venv /opt/venv

# Copy entrypoint script
COPY --chown=appuser:appuser entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Copy application code LAST (changes frequently → cached separately)
COPY --chown=appuser:appuser . .

# Optional: Pre-download your embedding model at build time
# Uncomment and adjust model name to avoid runtime download delays:
# RUN python -c "from sentence_transformers import SentenceTransformer; SentenceTransformer('all-MiniLM-L6-v2', cache_folder='/app/.cache/sentence_transformers')" || true

# Use non-root user (good practice even in development)
USER appuser

EXPOSE 8000

# Your existing entrypoint pattern preserved
ENTRYPOINT ["/entrypoint.sh"]
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
# For production-like testing:
# CMD ["uv", "run", "gunicorn", "config.wsgi:application", "--bind", "0.0.0.0:8000", "--reload"]